@model Models.Models.ScheduleModels.ScheduleViewModel
@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<div class="container" style="margin-bottom: 100px">
    <div class="row justify-content-center mb-5" style="margin-top: 10px">
        <div class="col-4 text-center">
            <h1>Edit Schedule Details</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-8">
            @using (Html.BeginForm("SaveEdit", "Schedule"))
            {
                <div class="row row-cols-2 justify-content-center mb-4">
                    <div class="col-3">
                        @Html.LabelFor(m => m.Description, htmlAttributes: new { @class = "form-label" })
                    </div>
                    <div class="col-5">
                        @Html.TextAreaFor(c => c.Description, new { @class = "form-control", @rows = "5" })
                    </div>
                </div>
                <div class="row row-cols-2 justify-content-center mb-4">
                    <div class="col-3">
                        @Html.LabelFor(m => m.CostPerPerson, htmlAttributes: new { @class = "form-label" })
                        @Html.HiddenFor(c => c.ScheduleId)
                        @Html.HiddenFor(c => c.FerryId)
                        @Html.HiddenFor(c => c.RowVersion)
                    </div>
                    <div class="col-5">
                        <div class="input-group">
                            <div class="input-group-text">
                                £
                            </div>
                            @Html.TextBoxFor(c => c.CostPerPerson, new { @class = "form-control", @type = "number", @step = "0.50" })
                        </div>
                    </div>
                </div>
                <div class="row row-cols-2 justify-content-center mb-5">
                    <div class="col-3">
                        @Html.LabelFor(m => m.CostPerVehicle, htmlAttributes: new { @class = "form-label" })
                    </div>
                    <div class="col-5">
                        <div class="input-group">
                            <div class="input-group-text">
                                £
                            </div>
                            @Html.TextBoxFor(c => c.CostPerVehicle, new { @class = "form-control", @type = "number", @step = "0.50" })
                        </div>
                    </div>
                </div>
                <div class="row row-cols-2 justify-content-center mb-5">
                    <div class="col-2">
                        <input type="submit" value="Save" class="btn btn-primary" style="width: 100px" />
                    </div>
                    <div class="col-2">
                        <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modal" style="width: 100px">Cancel</a>
                        <div class="modal fade" id="modal">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h2" class="text-danger">Warning</h2">
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to cancel? All changes will be lost</p>
                                    </div>
                                    <div class="modal-footer">
                                        <div class="row row-cols-2 justify-content-center">
                                            <div class="col">
                                                @Html.ActionLink("Yes", "Cancel", "Schedule", new { ferryId = Model.FerryId}, new { @class = "btn btn-primary" })
                                            </div>
                                            <div class="col">
                                                <a class="btn btn-danger" data-bs-dismiss="modal">No</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>
