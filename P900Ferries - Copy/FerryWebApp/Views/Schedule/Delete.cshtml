@model Models.Models.ScheduleModels.ScheduleViewModel
@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
@*@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__SaveAjaxAntiForgeryForm" }))
{
    @Html.AntiForgeryToken()
}*@
<div class="container" style="margin-bottom: 100px">
    <div class="row justify-content-center mb-5" style="margin-top: 10px">
        <div class="col-4 text-center">
            <h1>View Schedule Details</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-7">
            @using (Html.BeginForm("DeleteSchedule", "Schedule"))
            {
                <div class="row row-cols-2 justify-content-center mb-4">
                    <div class="col-3">
                        @Html.LabelFor(m => m.Description, htmlAttributes: new { @class = "form-label" })
                    </div>
                    <div class="col-5">
                        @Html.TextAreaFor(c => c.Description, new { @class = "form-control", @rows = "5", @disabled = "true" })
                    </div>
                </div>
                <div class="row row-cols-2 justify-content-center mb-4">
                    <div class="col-3">
                        @Html.LabelFor(m => m.CostPerPerson, htmlAttributes: new { @class = "form-label" })
                        @Html.HiddenFor(m => m.ScheduleId)
                        @Html.HiddenFor(m => m.FerryId)
                    </div>
                    <div class="col-5">
                        <div class="input-group">
                            <div class="input-group-text">
                                £
                            </div>
                            @Html.TextBoxFor(c => c.CostPerPerson, new { @class = "form-control", @type = "number", @step = "0.50", @disabled = "true" })
                        </div>
                    </div>
                </div>
                <div class="row row-cols-2 justify-content-center mb-5">
                    <div class="col-3">
                        @Html.LabelFor(m => m.CostPerVehicle, htmlAttributes: new { @class = "form-label" })
                    </div>
                    <div class="col-5">
                        <div class="input-group">
                            <div class="input-group-text">
                                £
                            </div>
                            @Html.TextBoxFor(c => c.CostPerVehicle, new { @class = "form-control", @type = "number", @step = "0.50", @disabled = "true" })
                        </div>
                    </div>
                </div>
                <div class="row row-cols-1 justify-content-center mb-5">
                    <div class="col-2">
                        <div class="col-2">
                            <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modal" style="width: 100px">Delete</a>
                            <div class="modal fade" id="modal">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h2" class="text-danger">Warning</h2">
                                        </div>
                                        <div class="modal-body">
                                            <p>Are you sure you want to delete this schedule?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <div class="row row-cols-2 justify-content-center">
                                                <div class="col">
                                                    <input type="submit" class="btn btn-success" value="Yes" />
                                                </div>
                                                <div class="col">
                                                    <a class="btn btn-danger" data-bs-dismiss="modal">No</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            -
        <div class="container">
            <div class="row justify-content-end">
                <div class="col-2 text-end">
                    <a class="btn btn-success" data-bs-toggle="modal" data-bs-target="#stopModal" style="width: 100px">Add Stop</a>
                    @{
                        Html.RenderPartial("_AddStop", Model.Stops);
                    }
                </div>
            </div>
   


            <div class="row row-cols-1 justify-content-center">
                <div class="col-6 text-center">
                    <h1 style="font-size:48px">
                        Stops
                    </h1>
                </div>
            </div>
            <div class="row row-cols-1 justify-content-center">
                <div class="col-12">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Departure Day
                                </th>
                                <th>
                                    Departure Time
                                </th>
                                <th>
                                    Arrival Day
                                </th>
                                <th>
                                    Arrival Time
                                </th>
                                <th>
                                    Location
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.StopsGrid.Count != 0)
                            {
                                foreach (var item in Model.StopsGrid)
                                {
                                    <tr>
                                        <td>
                                            @item.DepartureDay.DayName
                                        </td>
                                        <td>
                                            @item.DepartureTime
                                        </td>
                                        <td>
                                            @item.ArrivalDay.DayName
                                        </td>
                                        <td>
                                            @item.ArrivalTime
                                        </td>
                                        <td>
                                            @item.Location.LocationId
                                        </td>
                                        <td>
                                            <div class="row row-cols-1 justify-content-center mb-5">
                                                <div class="col-2">
                                                    <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#errormodal" style="width: 100px">Delete</a>
                                                    <div class="modal fade" id="errormodal">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h2" class="text-danger">Warning</h2">
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>Are you sure you want to delete this stop?</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <div class="row row-cols-2 justify-content-center">
                                                                        <div class="col">
                                                                            <a class="btn btn-success" href="@Url.Action("DeleteScheduleStop","Schedule", new {scheduleId = Model.ScheduleId, scheduleStopId = item.ScheduleStopId})">Yes</a>
                                                                        </div>
                                                                        <div class="col">
                                                                            <a class="btn btn-danger" data-bs-dismiss="modal">No</a>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>