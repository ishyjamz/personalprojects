@model Models.Models.BookingModels.ChooseJourneyModel
@{
    Layout = "~/Views/Shared/_BookingLayout.cshtml";
}
@using (Html.BeginForm("StoreJourney", "Booking"))
{
    <div class="container">
        <div class="row justify-content-center mt-3 mb-3">
            <div class="=col text-center">
                <h1 style="font-size: 48px">Choose Your Journey</h1>
            </div>
        </div>
    </div>
    <div class="container-fluid" style="border:5px solid; border-color: cornflowerblue; border-radius:10px">
        <div class="row justify-content-center mt-3 mb-2">
            <h4>Departure/ Arrival Locations</h4>
        </div>
        <div class="row row-cols-4 justify-content-center mb-3">
            <div class="col-2">
                @Html.LabelFor(m => m.LocationFrom, htmlAttributes: new { @class = "form-label" })
            </div>
            <div class="col-4">
                @Html.DropDownListFor(s => s.LocationFrom.LocationId,
                new SelectList(Model.LocationList, "LocationId", "Name"),
                "[Please Select]", new { @class = "form-select" })
            </div>
            <div class="col-2">
                @Html.LabelFor(m => m.LocationTo, htmlAttributes: new { @class = "form-label" })
            </div>
            <div class="col-4">
                @Html.DropDownListFor(s => s.LocationTo.LocationId,
                new SelectList(Model.LocationList, "LocationId", "Name"),
                "[Please Select]", new { @class = "form-select" })
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <h4>Pick a Date</h4>
        </div>
        <div class="row row-cols-2 justify-content-center mb-3">
            <div class="col-2">
                @Html.LabelFor(j => j.DateFrom, htmlAttributes: new { @class = "form-label" })
            </div>
            <div class="col-4">
                @Html.EditorFor(c => c.DateFrom, new { htmlAttributes = new { @class = "form-control ", @type = "date" } })
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <h4>Departure Time</h4>
        </div>
        <div class="row row-cols-2 justify-content-center mb-5">
            <div class="col-2">
                @Html.LabelFor(j => j.DepartingAfter, htmlAttributes: new { @class = "form=label" })
            </div>
            <div class="col-4">
                @Html.EditorFor(c => c.DepartingAfter, new { htmlAttributes = new { @class = "form-control", @type = "time" } })
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col text-center">
                <input type="submit" class="btn btn-success" value="Search" />
            </div>
        </div>
    </div>
}

