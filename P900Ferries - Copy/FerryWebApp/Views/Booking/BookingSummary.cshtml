@model Models.Models.BookingModels.BookingSummary
@{
    Layout = "~/Views/Shared/_BookingLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center mb-3 mt-3">
        <div class="=col text-center">
            <h1 style="font-size: 48px">Booking Summary</h1>
        </div>
    </div>
</div>
