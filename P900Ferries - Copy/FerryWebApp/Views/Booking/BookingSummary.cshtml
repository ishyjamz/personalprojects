        <div class="col-2  text-end">
            <p>@Model.ArrivalDate</p>
        </div>
    </div>
    <div class="row row-cols-2 justify-content-center mb-3 ">
        <div class="col-2  text-start">
            @Html.LabelFor(m => m.ArrivalTime, htmlAttributes: new { @class = "form-label" })
        </div>
        <div class="col-2  text-end">
            <p>@Model.ArrivalTime</p>
        </div>
    </div>
    <div class="row row-cols-2 justify-content-center mb-3 ">
