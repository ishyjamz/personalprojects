        <div class="col-2  text-start">
            @Html.LabelFor(m => m.ArrivalLocation, htmlAttributes: new { @class = "form-label" })
        </div>
        <div class="col-2  text-end">
            <p>@Model.ArrivalLocation</p>
        </div>
    </div>
    <div class="row row-cols-2 justify-content-center mb-3 ">
        <div class="col-2  text-start">
            @Html.LabelFor(m => m.DateFrom, htmlAttributes: new { @class = "form-label" })
        </div>
        <div class="col-2  text-end">
            <p>@Model.DateFrom</p>
        </div>
    </div>
