@model Models.Models.CompanyModels.CompanyViewModel
@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<div class="container" style="margin-bottom: 100px">
    <div class="row justify-content-center mb-5" style="margin-top: 10px">
        <div class="col-4 text-center">
            <h1>View Company Details</h1>
        </div>
    </div>

    <div class="row justify-content-center mb-5">
        <div class="col-7">
            @using (Html.BeginForm("DeleteCompany", "Company"))
            {
                <div class="row row-cols-2 justify-content-center mb-5">
                    <div class="col-3">
                        @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "form-label" })
                    </div>
                    <div class="col-4">
                        @Html.EditorFor(c => c.Name, new { htmlAttributes = new { @class = "form-control ", @disabled = "true" } })
                        @Html.HiddenFor(c => c.RowVersion)
                        @Html.HiddenFor(c => c.CompanyId)
                    </div>
                </div>
                if (Model.FerryGrid.Count == 0)
                {
                    <div class="row row-cols-1 justify-content-center mb-5">
                        <div class="col-2">
                            <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modal" style="width: 100px">Delete</a>
                            <div class="modal fade" id="modal">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h2" class="text-danger">Warning</h2">
                                        </div>
                                        <div class="modal-body">
                                            <p>Are you sure you want to delete this company?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <div class="row row-cols-2 justify-content-center">
                                                <div class="col">
                                                    <input type="submit" class="btn btn-success" value="Yes" />
                                                </div>
                                                <div class="col">
                                                    <a class="btn btn-danger" data-bs-dismiss="modal">No</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row row-cols-1 justify-content-center mb-5">
                        <div class="col-2">
                            <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modal" style="width: 100px">Delete</a>
                            <div class="modal fade" id="modal">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h2" class="text-danger">Error</h2">
                                        </div>
                                        <div class="modal-body">
                                            <p>Must delete all ferries associated with company to delete company</p>
                                        </div>
                                        <div class="modal-footer">
                                            <div class="row row-cols-2 justify-content-center">
                                                <div class="col">
                                                    <a class="btn btn-primary" data-bs-dismiss="modal">OK</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            }
        <div class="container">


            <div class="row justify-content-end mb-3 mt-5">
                <div class="col-3 text-center">
                    @Html.ActionLink("Add Ferry", "Create", "Ferry", new { companyId = Model.CompanyId }, new { @class = "btn btn-success" })
                </div>
            </div>
            @if (Model.FerryGrid.Count != 0)
            {
                <div class="row row-cols-1 justify-content-center">
                    <div class="col text-center">
                        <h2>
                            Company Ferries
                        </h2>
                    </div>
                </div>
                <div class="row row-cols-1 justify-content-center">
                    <div class="col">

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Ferry
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.FerryGrid)
                                {
                                    <tr>
                                        <td>
                                            @item.FerryName
                                        </td>
                                        <td>
                                            @Html.ActionLink("View Details", "Delete", "Ferry", new { id = item.FerryId }, new { @class = "btn btn-secondary" })
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", "Ferry", new { id = item.FerryId }, new { @class = "btn btn-primary" })
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        
                    </div>
                </div>
            }
            </div>
        </div>
    </div>

</div>

