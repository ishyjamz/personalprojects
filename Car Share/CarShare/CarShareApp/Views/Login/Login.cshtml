@model Models.Models.LoginModels.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
</head>
<body style="background-color: #DDC3A5; padding-top:250px">
    <div class="container">
        <div class="row justify-content-center mt-3 mb-5">
            <div class="col-4">
                <h1 style="color: #201E20">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z" />
                        <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                    </svg>
                    Login Page
                </h1>
            </div>
        </div>
        @using (Html.BeginForm("SignInUser", "Login"))
        {
            <div class="row justify-content-center mb-3">
                <div class="col-4">
                    <div class="form-floating">
                        @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username", @style = "width: 300px" } })
                        @Html.LabelFor(m => m.Username, htmlAttributes: new { @class = "form-label" })
                    </div>

                    <div class="text-danger">
                        @Html.ValidationMessageFor(m => m.Username)
                    </div>
                </div>
            </div>
            <div class="row justify-content-center mb-5">
                <div class="col-4">
                    <div class="form-floating">
                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Password", @style = "width: 300px" } })
                        @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "form-label" })
                    </div>
                    <div class="text-danger">
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
            </div>
            if (ViewBag.Text != null)
            {
                <div class="row justify-content-center">
                    <div class="col-6 text-center">
                        <div class="alert alert-danger" style="width: 500px">
                            @ViewBag.Text
                        </div>
                    </div>
                </div>
            }
            <div class="row justify-content-center mt-3">
                <div class="col-2 text-start">
                    <input type="submit" value="Login" class="btn" style="font-weight: bold; color: wheat;background-color: #201E20; height: 40px; width: 100px" />
                </div>
            </div>
        }
    </div>
</body>
</html>
