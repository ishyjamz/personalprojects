@model PresentationModels.Driver.ApprovedPassengers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*colours:
    Beige: #DDC3A5
    Black-Brown: #201E20
    Tan: #E0A96D*@
@using (Html.BeginForm("AddApprovedPassenger", "Driver", FormMethod.Post))
{
    <div class="container-fluid">
        <div class="row justify-content-center mt-5">
            <div class="col text-center">
                <h1 class="h1" style="font-size: 48px; color: #201E20; font-weight: bold">Driver: Approved Passengers</h1>
            </div>
        </div>
    </div>
    <div class="container w-50 mt-5">
        <div class="row">
            <div class="col text-center">
                <h2 style="color: #201E20">Approved List</h2>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <table class="table">
                    <thead style="background-color: #E0A96D; color: #201E20 ">
                        <tr class="text-center">
                            <th>
                                Passenger
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ApprovedList != null)
                        {
                            foreach (var item in Model.ApprovedList)
                            {
                                <tr class="text-center">
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        <a class="btn" data-bs-toggle="modal" data-bs-target="#modal" style="font-weight: bold; color: white; background-color:#FF0000">Remove</a>
                                        <div class="modal fade" id="modal">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header" style="background-color: #201E20">
                                                        <h2 class="text-danger" style="font-weight: bold">Warning</h2>
                                                    </div>
                                                    <div class="modal-body" style="background-color: #201E20">
                                                        <p style="color:wheat; font-weight:bold">Are you sure you want to remove this person from your approved list?</p>
                                                    </div>
                                                    <div class="modal-footer" style="background-color: #201E20">
                                                        <div class="row row-cols-2 justify-content-center">
                                                            <div class="col text-center">
                                                                <a href="@Url.Action( "RemovePassenger", "Driver", new {passengerId = item.UserId} )" class="btn" style="background-color: #FF0000; color:white; font-weight:bold">Remove</a>
                                                            </div>
                                                            <div class="col text-center">
                                                                <a class="btn" style="background-color: #E0A96D; color: #201E20; font-weight: bold" data-bs-dismiss="modal">Close</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row row-cols-2 mt-3 justify-content-start">
            <div class="col text-start">
                @Html.DropDownListFor(s => s.PassengerId,
                new SelectList(Model.Passengers, "UserId", "Name"),
                "[Please Select]", new { @class = "form-select" })
                <div class="text-danger">
                    @Html.ValidationMessageFor(m => m.PassengerId)
                </div>
            </div>
            <div class="col text-end">
                <input type="submit" value="Add Passenger" class="btn" style="color: white; font-weight: bold; background-color: #1DB954" />
            </div>
        </div>
    </div>
}


